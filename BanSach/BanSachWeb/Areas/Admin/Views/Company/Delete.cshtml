@model Company
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete company</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="StreetAddress">StreetAddress</label>
            <input asp-for="StreetAddress" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="City">City</label>
            <input asp-for="City" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="State">State</label>
            <input asp-for="State" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PostalCode">PostalCode</label>
            <input asp-for="PostalCode" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="PhoneNumber">PhoneNumber</label>
            <input asp-for="PhoneNumber" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Company" asp-action="Index" class="btn btn-primary">Back to list</a>
    </div>
</form>