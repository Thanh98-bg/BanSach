@model IEnumerable<CoverType>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>Index Cover Type</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Cover Type
            </a>
        </div>
    </div>
    <br />
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Cover Type name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>
                        <a asp-controller="CoverType" asp-action="Edit" class="btn btn-primary">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-controller="CoverType" asp-action="Delete" class="btn btn-danger">
                            <i class="bi bi-trash3"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>